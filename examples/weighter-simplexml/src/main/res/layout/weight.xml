<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="wrap_content">
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
		<Spinner
			android:id="@+id/spinner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight=".6"/>
		<Button android:layout_width="wrap_content" android:id="@+id/auth" android:text="Auth" android:layout_height="wrap_content"></Button>
		<Button android:id="@+id/newapp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="NewApp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		<Button android:layout_width="wrap_content" android:id="@+id/btnPutAdvDirective" android:text="Add Advance directive" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnPutBmi" android:text="Add BMI" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnSleepSession" android:text="Add Sleep session" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnWebLink" android:text="Add Weblink" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnStatus" android:text="Add Status" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnConcern" android:text="Add Concern" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnComment" android:text="Add Comment" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnEncounter" android:text="Add Encounter" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnBp" android:text="Add BP" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnBd" android:text="Add Body dimension" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnInsInj" android:text="Add Ins. Inj." android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnGlucose" android:text="Add Blood Glucose" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnBOS" android:text="Add BOS" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/btnInsInjUse" android:text="Add Ins. Inj. Usage" android:layout_height="wrap_content" android:layout_weight=".2"></Button>
	</LinearLayout>

	<ListView android:id="@+id/dataList" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="right"></ListView>
</LinearLayout>

